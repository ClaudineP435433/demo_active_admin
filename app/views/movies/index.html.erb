<div class="container">
  <h1>Movies</h1>
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.title %></h4>
          <p><%= movie.syllabus %></p>
          <% movie.images.each do |image| %>
            <%= image_tag url_for(image), height: 300 %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
